# extasy.asia Backend Environment Variables
# Copy this file to .env and fill in your values

# Server
PORT=3000
NODE_ENV=production

# Database (PostgreSQL - Aiven)
DATABASE_URL=postgres://avnadmin:YOUR_PASSWORD@your-db.aivencloud.com:15922/defaultdb?sslmode=require

# JWT Secret (generate a secure random string)
JWT_SECRET=your-super-secret-jwt-key-here

# Session Secret
SESSION_SECRET=your-session-secret-here

# Email Service (Resend/SpaceMail)
EMAIL_SERVICE=resend
RESEND_API_KEY=re_your_resend_api_key
EMAIL_FROM=no-reply@extasy.asia

# Discord OAuth
DISCORD_CLIENT_ID=your-discord-client-id
DISCORD_CLIENT_SECRET=your-discord-client-secret
DISCORD_REDIRECT_URI=http://localhost:5173/api/auth/discord/callback

# Admin
ADMIN_EMAIL=help@extasy.asia

# Frontend URL (for email links)
FRONTEND_URL=https://extasy.asia
